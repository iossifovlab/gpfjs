{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "entryModule": "./app/app.module#AppModule",
    "genDir": "./ngfactory",
    "enableIvy": true
  },
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
    },
